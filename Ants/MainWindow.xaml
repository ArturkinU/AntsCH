<Window x:Class="Ants.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ants"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <StackPanel Background="#FF989898" Height="30" VerticalAlignment="Top" Margin="0,-10,0,0">
      
        <StackPanel HorizontalAlignment="Right" Width="120" Orientation="Horizontal">
            <Button x:Name="minimize_btn" Content="-" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
            <Button Content="▢" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
            <Button Content="❌" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
        </StackPanel>  
       
       
    </StackPanel>
</Window>
